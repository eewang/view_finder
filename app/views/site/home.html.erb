<div class="container-fluid front-page">
<br>

<div class="row-fluid" align="center">
  <%= image_tag 'logo.png', :width => "400px" %>
</div>
<br><br>
 <div class="row-fluid instruct">
    <div class="span4">
      <%= image_tag 'instruct1.png' %>
    </div>
    <div class="span4">
      <%= image_tag 'instruct2.png' %>
    </div>
    <div class="span4">
      <%= image_tag 'instruct3.png' %>
    </div>
  </div>
  <br>
  <br>
 <div class="row-fluid show-grid nav-row">
    <div class="span6 nav-box">
      <span>
        <%#= link_to "Log in with Instagram", '/instagram', :class => 'btn-link' %>
        <%= link_to "Log in with Instagram", "auth/instagram", :class => 'btn-link' %>
      </span>
    </div>
    <div class="span6 nav-box"><span id="title-placeholder">Choose from three locations</span></div>
  </div>
  <!-- First row -->
<br>
  <div class="row-fluid">

    <!-- Midtown Manhattan -->
    <div class="span4 location_game">
      <div id="myCarousel" class="carousel slide" data-interval="10">
        <div class="carousel-inner">
          <%= location_game_cover("introbox1.png", photos_midtown_path) %>
          <% @myfavorite[0].each do |photo| %>
            <%= location_game(photo, photos_midtown_path) %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Downtown Manhattan -->
    <div class="span4 location_game">
      <div id="myCarousel2" class="carousel slide" data-interval="10">
        <div class="carousel-inner">
          <%= location_game_cover("introbox3.png", photos_downtown_path) %>
          <% @myfavorite[1].each do |photo| %>
            <%= location_game(photo, photos_downtown_path) %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Downtown Brooklyn -->
    <div class="span4 location_game">
      <div id="myCarousel3" class="carousel slide" data-interval="10">
        <div class="carousel-inner">
          <%= location_game_cover("introbox2.png", photos_downtown_brooklyn_path) %>
          <% @myfavorite[2].each do |photo| %>
            <%= location_game(photo, photos_downtown_brooklyn_path) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Second row  -->

  <div class="row-fluid">
    <!-- Second row, two column (two rows) -->
    <div class="span12">

      <div class="span8">
        <div id="myCarousel" class="carousel slide" >
          <div class="carousel-inner">
            <% if @user_feed %>
              <div class="active item">
                <%= link_to image_tag(@identity_auth.avatar, {:width => 1000}), photos_user_media_feed_path %>
                  <div class="carousel-caption">
                    <h4><%= @identity_auth.login_name %></h4>
                  </div>
              </div>
              <% @user_feed.each do |photo| %>
                <div class="item">
                  <%= link_to image_tag(photo.images.standard_resolution.url, {:width => 1000}), photos_user_media_feed_path %>
                  <div class="carousel-caption">
                    <h4><%= @identity_auth.login_name %></h4>
                  </div>
                </div>
              <% end %>
            <% else %>
              <%= user_feed("active") %>
              <%= user_feed %>
            <% end %>
          </div>
        </div>
      </div>

    <!-- Second row, first column -->
      
      <div class="span4 friend_feed" style="float: left;" >
        <div id="myCarousel" class="carousel slide" >
          <div class="carousel-inner friend_feed" id="first_friend_feed">

            <% if @identity_auth %>
              <% if !@user_friends_array.empty?  %>
                <div class="active item">
                  <%= friend_feed_avatar(@user_friends_array[0]) %>
                  <%= friend_feed_caption(@user_friends_array[0]) %>
                </div>
                <% @user_friends_array[0][3].each do |p| %>
                <div class="item">
                <%= friend_feed_image(p, @user_friends_array[0]) %>
                <%= friend_feed_caption(@user_friends_array[0]) %>
                </div>
                <% end %>
                <% else %>
                <!--DISPLAY "INVITE YOUR FRIENDS" IMAGES-->
                <%= intro_photos_carousel(['introtag3.jpg', 'introtag2.jpg', 'introtag1.jpg']) %>
              <% end %>
            <% else %>
              <%= intro_photos_carousel(['introtag3.jpg', 'introtag2.jpg', 'introtag1.jpg']) %>
            <% end %>

          </div>
        </div>
      </div>
      <div class="clear"></div>

      <!-- Third row, first column -->

      <div class="span4" style="float: left;">
        <div id="myCarousel" class="carousel slide" >
          <div class="carousel-inner friend_feed" id="last_friend_feed">

            <% if @identity_auth %>
              <% if @user_friends_array.size > 1  %>
                <div class="active item">
                  <%= friend_feed_avatar(@user_friends_array[1]) %>
                  <%= friend_feed_caption(@user_friends_array[1]) %>
                </div>
                <% @user_friends_array[1][3].each do |p| %>
                <div class="item">
                <%= friend_feed_image(p, @user_friends_array[1]) %>
                <%= friend_feed_caption(@user_friends_array[1]) %>
                </div>
                <% end %>
                <% else %>
              <!--DISPLAY "INVITE YOUR FRIENDS" IMAGES-->
              <%= intro_photos_carousel(['sample3.jpg', 'sample2.jpg', 'sample1.jpg']) %>
              <% end %>
            <% else %>
              <%= intro_photos_carousel(['sample3.jpg', 'sample2.jpg', 'sample1.jpg']) %>
            <% end %>
          </div>
        </div>
      </div>
    </div></div>
     <div class="row-fluid show-grid-contribute">
    <div class="span12">
      <span style="font-style:bold;">
        Add your photos with #viewfinder or #vfyw
      </span>
    </div>
  <br>
  </div>


</div> <!-- Ends container-fluid -->


